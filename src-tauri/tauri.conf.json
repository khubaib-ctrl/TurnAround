{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.editgit.desktop",
  "productName": "EditGit",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "ng serve",
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": "ng build",
    "frontendDist": "../dist/editgit/browser"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "EditGit â€” Video Version Control",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
